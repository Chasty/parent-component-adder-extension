{
  "name": "addparentcomponent",
  "displayName": "Add Parent Component",
  "description": "Add a parent component to any selected portion of code",
  "version": "0.0.1",
  "publisher": "Chasty",
  "license": "GPL-3.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addParentComponent",
        "title": "Add Parent Component"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "extension.addParentComponent",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.addParentComponent",
        "key": "cmd+u",
        "mac": "cmd+u",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "onEnterRules": [
      {
        "beforeText": [
          "{"
        ],
        "action": {
          "indentAction": "Indent"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Chasty/parent-component-adder-extension"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "license-generator": "^0.0.13"
  }
}
